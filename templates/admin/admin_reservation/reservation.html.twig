{% extends 'baseAdmin.html.twig' %}

{% block body %}
	<div class="flex justify-center m-5">
		<div class="flex flex-col min-w-full min-h-full rounded-lg bg-third text-center shadow-lg">
			<div class="card-header border-b border-primary-800">
				<div class="card-title text-primary-800 font-medium py-3 px-6">
					Reservations Management
				</div>
			</div>
			<div class="card-body p-3">
				<div class="flex flex-col table-responsive overflow-x-auto lg-rounded">
					<div class="sm:-mx-1 lg:-mx-2">
						<div class="inline-block min-w-full py-2 sm:px-3 lg:px-4">
							<div class="overflow-x-auto">
								<table class="min-w-full text-left text-sm font-light">
									<thead class="border-b text-primary-700 text-center">
										<tr>
											<th scope="col" class="px-3 py-2 font-medium">ID</th>
											<th scope="col" class="px-3 py-2">User</th>
											<th scope="col" class="px-3 py-2">Bundle</th>
											<th scope="col" class="px-3 py-2">Start Date</th>
											<th scope="col" class="px-3 py-2">End Date</th>
											<th scope="col" class="px-3 py-2">Guests</th>
											<th scope="col" class="px-3 py-2">CreatedAt</th>
											<th scope="col" class="px-3 py-2">UpdatedAt</th>
											<th scope="col" class="px-3 py-2">Actions</th>
										</tr>
									</thead>
									<tbody class="text-secondary-200 text-center">
										{% for reservation in reservations %}
											<tr class="border-b">
												<td class="whitespace-nowrap px-3 py-2 font-medium">{{ reservation.id }}</td>
												<td class="whitespace-nowrap px-3 py-2">{{ reservation.user }}</td>
												<td class="whitespace-nowrap px-3 py-2">{{ reservation.bundle }}</td>
												<td class="whitespace-nowrap px-3 py-2">{{ reservation.startDate|date('Y-m-d H:i:s') }}</td>
												<td class="whitespace-nowrap px-3 py-2">{{ reservation.endDate|date('Y-m-d H:i:s')}}</td>
												<td class="whitespace-nowrap px-3 py-2">{{ reservation.guests }}</td>
												<td class="whitespace-nowrap px-3 py-2">{{ reservation.createdAt|date('Y-m-d H:i:s') }}</td>
												<td class="whitespace-nowrap px-3 py-2">
													{% if reservation.updatedAt %}
														{{ reservation.updatedAt|date('Y-m-d H:i:s') }}
													{% endif %}
												</td>
												<td class="whitespace-nowrap px-3 py-2">
													<a href="{{ path('app_admin_reservation_delete', {'id': reservation.id}) }}" class="btn-tw btn-secondary-tw btn-sm m-1" onclick="return confirm('Are you sure?')">
														Delete
													</a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer border-t border-primary-800 py-2 px-4"></div>
		</div>
	</div>
{% endblock %}
