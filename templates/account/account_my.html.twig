{% extends 'base.html.twig' %}

{% block title %}
	Personal Information
{% endblock %}

{% block body %}
	<!-- ======= Personal Information Section ======= -->
	<section id="personal-information" class="">
		<div class="container" data-aos="fade-down" data-aos-delay="100">
			<div class="section-title">
				<h2>Personal Information</h2>
			</div>
			<div class="row mt-5 flex items-center justify-center">
				<div class="col-12 col-md-8">
					<div class="card border-none border-primary font-poiretone mt-4 mt-md-0">
						<div class="card-header flex flex-row justify-between bg-black  uppercase">
							<h3 class="text-primary">Personal Information</h3>
							<a href="{{ path('app_account_my_edit')}}">
								<span class="hover:text-primary-500 focus:text-primary-500 cursor-pointer">
									<i class="bi bi-person-fill-gear"></i>
								</span>
							</a>
						</div>
						{% if app.user %}
							<table class="card-body bg-secondary table table-borderless overflow-hidden w-full mb-0">
								<tbody>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">Lastname :</th>
										<td class="text-end">{{ app.user.lastName }}</td>
									</tr>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">Firstname :</th>
										<td class="text-end">{{ app.user.firstName }}</td>
									</tr>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">Email :</th>
										<td class="text-end">{{app.user.email}}</td>
									</tr>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">Password :</th>
										<td class="text-end">********</td>
									</tr>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">Address :</th>
										<td class="text-end">{{ app.user.address }}</td>
									</tr>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">City :</th>
										<td class="text-end">{{ app.user.city }}</td>
									</tr>
									<tr class="flex flex-wrap justify-between">
										<th class="text-primary">PostalCode :</th>
										<td class="text-end">{{ app.user.postalCode }}</td>
									</tr>
								</tbody>
							</table>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</section><!-- End Personal Information Section -->{% endblock %}
