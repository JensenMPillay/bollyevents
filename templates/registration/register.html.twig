{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<h1>Register</h1>

	{{ form_start(registrationForm) }}
	{{ form_row(registrationForm.email, {'attr': { 'placeholder': "Email"}}) }}
	{{ form_row(registrationForm.lastName, {'attr': { 'placeholder': "Last Name"}}) }}
	{{ form_row(registrationForm.firstName, {'attr': { 'placeholder': "First Name"}}) }}
	{{ form_row(registrationForm.plainPassword, {'attr': { 'placeholder': "Password"}}) }}
	{{ form_row(registrationForm.confirmPassword, {'attr': { 'placeholder': "Confirm Password"}}) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn">Register</button>
	{{ form_end(registrationForm) }}
{% endblock %}
