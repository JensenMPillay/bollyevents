{% extends 'base.html.twig' %}

{% block title %}Products
{% endblock %}

{% block body %}
	<div class="w-full h-max flex justify-center bg-black ">
		<div class="grid w-max gap-4 grid-cols-3 grid-rows-3 m-10 bg-gray-900 p-5 overflow-y-auto">
			{% for product in products %}
				<div class=" max-w-sm bg-gray-800 border border-gray-200 rounded-lg shadow pt-3">
					<a class="img-thumbnail flex justify-center mb-2" href="{{ path('app_front_product', {'id': product.id}) }}">
						{% for img in product.carousel %}
							<img src="{{ asset("uploads/images_products/" ~ img) }}" alt="{{ img }}" style="max-width: 50%; max-height: 200px;">
						{% endfor %}
					</a>
					<div class="px-5 pb-5 ">
						<a href="#">
							<h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{{product.name}}</h5>
							<h3 class="text-md font-semibold tracking-tight text-gray-900 dark:text-white">{{product.description}}</h3>
						</a>
						<div class="flex items-center justify-between">
							<span class="text-3xl font-bold text-gray-900 dark:text-white">{{product.price}}â‚¬</span>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
