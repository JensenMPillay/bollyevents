<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<title>
			{% block title %}{% endblock %}
		</title>
		<!-- Favicons -->
		<link
		href="{{asset("images/logo/marrymix-icon.ico")}}" rel="icon"/>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body id="body" class="bg-black text-neutral-100 font-opensans">
		{% if not app.session.get('cookieConsent') %}
			{{include('cookie_consent/consent.html.twig')}}
		{% endif %}
		{% block topbar %}
			{{include('_partials/topbar.html.twig')}}
			{% block flash %}
				{{include('_partials/flash.html.twig')}}
			{% endblock %}
		{% endblock %}
		<!-- ======= Header ======= -->
		<header id="header" class="fixed-top d-flex align-items-center" data-aos="fade-down" data-aos-easing="linear" data-aos-delay="500">
			{% block header %}
				{{include('_partials/header.html.twig')}}
			{% endblock %}
		</header>
		<!-- ======= Header ======= -->
		<!-- ======= Hero ======= -->
		{% block hero %}{% endblock %}
		<!-- ======= Hero ======= -->
		<!-- ======= Main ======= -->
		<main id="main"> {% block body %}{% endblock %}
			</main>
			<!-- ======= Main ======= -->
			<!-- ======= Footer ======= -->
			<footer id="footer">
				{% block footer %}
					{{include('_partials/footer.html.twig')}}
				{% endblock %}
			</footer>
			<!-- ======= Footer ======= -->
			<!-- ======= Preloader & Back To Top Button ======= -->
			<div id="preloader"></div>
			<a href="#" class="back-to-top d-flex align-items-center justify-content-center">
				<i class="bi bi-arrow-up-short"></i>
			</a>
			<!-- ======= Preloader ======= -->
			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		</body>
	</html>
